		<search>8888</search>
		<replace>8889</replace>
	<searchReplace>-->
      <import>
         <searchReplace>
            <search/>
            <replace/>
         </searchReplace>
      </import>
      <service name="ConsumeRequest">
         <binding type="jca"/>
      </service>
      <property name="productVersion">
         <replace>11.1.1.7.0</replace>
      </property>
      <!--Add search and replace rules for the component properties
	For components and service/reference bindings, you can add policy references.
	Example:
	<component name="*">
		<wsp:PolicyReference orawsp:category="management" orawsp:status="enabled" URI="oracle/log_policy"/>
	</component>-->
      <component name="ACEDSIncomeService">
         <property name="bpel.config.transaction">
            <replace>required</replace>
         </property>
         <property name="bpel.config.oneWayDeliveryPolicy">
            <replace>sync</replace>
         </property>
      </component>
      <reference name="ACEDS_IncomeInquiry">
         <!--Add search and replace rules for the binding properties-->
         <binding type="ws">
            <attribute name="port">
               <replace>http://namespace.softwareag.com/entirex/xml/mapping#wsdl.endpoint(DHSDCASWebservices/EISBATCHSOAP12Port)</replace>
            </attribute>
            <attribute name="location">
               <searchReplace>
                  <search>oramds:/apps/DCAS/ESB/ACEDS/wsdl/DHSDCASWebservices.wsdl</search>
                  <replace>http://10.83.84.148:10010/wsstack/services/DHSDCASWebservices?wsdl</replace>
               </searchReplace>
            </attribute>
            <property name="weblogic.wsee.wsat.transaction.flowOption">
               <replace>WSDLDriven</replace>
            </property>
            <property name="oracle.webservices.httpReadTimeout">
               <replace>30000</replace>
            </property>
         </binding>
      </reference>
      <reference name="PublishResponse">
         <binding type="jca"/>
      </reference>
   </composite>
